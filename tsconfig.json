{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        //"declaration": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "importHelpers": true,
        "jsx": "react",
        "alwaysStrict": true,
        "sourceMap": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "lib": ["dom", "es2017"],
        "typeRoots": ["./src/types"]
    },
    "include": [
        "src/**/*",
    ],
    "exclude": ["node_modules", "lib"],
}